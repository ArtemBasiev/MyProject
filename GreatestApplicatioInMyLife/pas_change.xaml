<Window x:Class="GreatestApplicatioInMyLife.pas_change"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
         xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors" x:Name="window_change_pas"
        dx:ThemeManager.ThemeName="LightGray"
        Title="Изменение пароля" Height="260.187" Width="331.818"  WindowStartupLocation="CenterScreen" Icon="Images/icons8-Пароль-32.png" >
    <StackPanel>

        <Label Content="Старый пароль:" Margin="49,25,0,0"/>
        <dxe:PasswordBoxEdit x:Name="oldpas" Width="250"  HorizontalAlignment="Center" Margin="25,0,0,15" AllowNullInput="True" AllowUpdateTextBlockWhenPrinting="True" GotFocus="oldpas_GotFocus"/>
        <Label Content="Новый пароль:" Margin="49,2,0,0"/>
        
        <dxe:PasswordBoxEdit x:Name="newpas" Width="250"  HorizontalAlignment="Center" Margin="25,0,0,15" AllowNullInput="True" AllowUpdateTextBlockWhenPrinting="True" GotFocus="oldpas_GotFocus"/>
        <ToolBarPanel x:Name="tbp_main_window_di" Orientation="Horizontal" VerticalAlignment="Bottom" Margin="10,15,10,0"  >
            <Button x:Name="bt_change_pas" Content="Изменить" Margin="58,0,30,0" IsEnabled="False" Click="bt_change_pas_Click" />

            <Button x:Name="bt_can" Content="Отмена"  />

        </ToolBarPanel>
    </StackPanel>
</Window>
