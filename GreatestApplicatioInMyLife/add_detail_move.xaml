<Window x:Class="GreatestApplicatioInMyLife.add_detail_move"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
           xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
         xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors" xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
        x:Name="window_add_details_arr"
        dx:ThemeManager.ThemeName="LightGray"
        Title="Добавить номенклатуру" Height="235" Width="386.773"  Icon="Images/Настройки-32.png" WindowStartupLocation="CenterScreen">
    <StackPanel>



        <Label Content="Номенклатура:" Margin="25,10,0,0"/>
        <dxe:ButtonEdit x:Name="be_nom" Width="329" HorizontalAlignment="Left" Margin="25,0,0,25" DefaultButtonClick="be_nom_DefaultButtonClick"   />

        <Label Content="Количество:" Margin="25,0,0,0"/>
        <dxe:PopupCalcEdit x:Name="culc_sum" Width="132" HorizontalAlignment="Left" Margin="25,0,0,20" TextInput="calc_sel_TextInput" />

        <ToolBarPanel x:Name="tbp_main_window_di" Orientation="Horizontal" VerticalAlignment="Bottom" Margin="10,15,10,0"  >
            <Button x:Name="bt_add_det" Content="Добавить" Margin="100,0,30,0" Click="bt_add_det_Click" />

            <Button x:Name="bt_can_add_det" Content="Отмена" />

        </ToolBarPanel>

    </StackPanel>
</Window>
